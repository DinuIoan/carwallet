<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/view_background"
        android:background="#FF3D00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_forever"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:text="Delete"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view_item_title"
                android:layout_toEndOf="@+id/service_icon"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:elevation="4dp"
                android:background="@drawable/service_date_style"/>

            <ImageView
                android:id="@+id/service_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:elevation="15dp"
                android:background="@mipmap/ic_repair"
                />

            <TextView
                android:id="@+id/recycler_view_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/service_icon"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorPrimaryReplyBlue"
                android:layout_marginStart="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right"/>
    </RelativeLayout>



</FrameLayout>