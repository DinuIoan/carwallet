<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/view_background"
        android:background="#FF3D00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_forever"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:text="Delete"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/recycler_view_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/recycler_view_item_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view_item_title"
                android:textSize="17sp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/recycler_view_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_below="@+id/recycler_view_item_mileage"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/recycler_view_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:text="15215 LEI"
                android:layout_gravity="center"/>

    </RelativeLayout>


</FrameLayout>