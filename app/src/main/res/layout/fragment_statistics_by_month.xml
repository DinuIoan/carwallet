<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/select_year_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/select_year"
                android:elevation="8dp"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/no_data_available_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text="@string/noDataAvailable"
                    android:textColor="@color/colorSecondaryReplyOrange"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/input_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/selectYear"
                    android:textColor="@color/colorSecondaryReplyOrange"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/input_year"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/january"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_year_relative_layout">

                <TextView
                    android:id="@+id/january_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/most_expensive_style"
                    android:text="@string/january"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:elevation="2dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryReplyBlue"/>

                <com.github.mikephil.charting.charts.ScatterChart
                    android:id="@+id/january_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/january_title"/>

                <TextView
                    android:id="@+id/january_chart_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_below="@id/january_title"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:text="@string/noDataAvailable"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/february"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/january">

                <TextView
                    android:id="@+id/february_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/most_expensive_style"
                    android:text="@string/february"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:elevation="2dp"
                    android:textColor="@color/colorPrimaryReplyBlue"
                    android:gravity="center_horizontal"/>

                <com.github.mikephil.charting.charts.ScatterChart
                    android:id="@+id/february_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/february_title"/>

