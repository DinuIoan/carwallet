                    android:text="@string/april"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:elevation="2dp"
                    android:textColor="@color/colorPrimaryReplyBlue"
                    android:gravity="center_horizontal"/>

                <com.github.mikephil.charting.charts.ScatterChart
                    android:id="@+id/april_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/april_title"/>

                <TextView
                    android:id="@+id/april_chart_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_below="@id/april_title"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:text="@string/noDataAvailable"/>
            </RelativeLayout>
            <RelativeLayout
