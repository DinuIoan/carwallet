<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/view_background"
        android:background="#FF3D00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_forever"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:text="Delete"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/gas_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:elevation="15dp"
            android:background="@mipmap/ic_gas_round"
            />
        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/gas_icon"
            android:textColor="@color/colorPrimaryReplyBlue"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryReplyBlue"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/avarage_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/from"
            android:layout_toEndOf="@id/gas_icon"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryReplyBlue"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avarage_consumption"
            android:layout_toEndOf="@id/gas_icon"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryReplyBlue"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/fuel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/distance"
            android:layout_toEndOf="@id/gas_icon"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryReplyBlue"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fuel_price"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:elevation="4dp"
            android:background="@drawable/service_date_style"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/total_liters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_price"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:elevation="4dp"
            android:background="@drawable/service_date_style"
            android:textSize="13sp"/>
    </RelativeLayout>

</FrameLayout>