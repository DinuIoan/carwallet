<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_background"
        android:background="#FFFFFF"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp">

        <TextView
            android:id="@+id/recycler_view_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorPrimaryReplyBlue"/>

        <ImageView
            android:id="@+id/alarm_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_view_item_title"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alarm_on_off"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryReplyBlue"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <!--commented until when alarm will be implemented-->
        <!--<TextView-->
            <!--android:id="@+id/hour"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_below="@+id/date"-->
            <!--android:textStyle="italic"-->
            <!--android:gravity="center"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/colorPrimaryReplyBlue"-->
            <!--android:layout_marginBottom="15dp"/>-->

        <ImageView
            android:id="@+id/delete_notification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clear"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>


</FrameLayout>